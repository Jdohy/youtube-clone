extends base.pug

block content 
    if errorMessage 
        span=errorMessage 
    form(method="POST", enctype="multipart/form-data")
        label(for="video") Video File 
        input(name="video", id="video",type="file", accept="video/*",required)
        input(name="title",placeholder="Title",required,type="text",minlength=2,maxlength=12)
        input(name="description",placeholder="Description",required,type="text",maxlength=100)
        input(name="hashtags",placeholder="Hashtahs, separated by comma",required,type="text")
        input(type="submit" value="Upload Video")